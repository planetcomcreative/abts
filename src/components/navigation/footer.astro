---
import { footer } from "../../../data/navigation.json";
import Icon from "../utility/icon";
---

<footer
  style={`background-color: ${footer.background_color}; color: ${footer.color};`}
  class=""
>
  <div class="bg-pink-300">
    <div
      class="flex justify-center items-center gap-4 0 max-w-screen-xl mx-auto py-4"
    >
      <img
        src="/abts-instagram.png"
        alt=""
        class="h-auto w-16"
        height="60"
        width="60"
      />
      <img
        src="abts-facebook.png"
        alt=""
        class="h-auto w-16"
        height="60"
        width="60"
      />
      <img
        src="/abts-x.png"
        alt=""
        class="h-auto w-16"
        height="60"
        width="60"
      />
    </div>
  </div>
  <div class="max-w-screen-xl mx-auto">
    <div class="flex justify-center items-center gap-8 py-4">
      <a class="text-xl font-normal font-extrabold text-gray-900">Home</a>
      <span>/</span>
      <a class="text-xl font-normal font-extrabold text-gray-900">Contact</a>
      <span>/</span>
      <a class="text-xl font-normal font-extrabold text-gray-900">Banana Bread</a>
      <span>/</span>
      <a class="text-xl font-normal font-extrabold text-gray-900">Rootin Tootin Baked Beans</a>
      <span>/</span>
      <a class="text-xl font-normal font-extrabold text-gray-900">Caramel</a>
      <span>/</span>
      <a class="text-xl font-normal font-extrabold text-gray-900">About</a>
    </div>
  </div>
</footer>

<style>
  .footer {
    max-width: var(--pageContainer);
    margin: 0 auto;
  }
  .footer__logo-image {
    display: block;
    max-width: min(200px, 80%);
  }
</style>
